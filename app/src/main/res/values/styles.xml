<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitlePage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/bunting</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/fragment_travel_easy_tv_travel_easy_text_size</item>
    </style>

    <style name="label_above_edit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/fragment_sign_in_view_text_size</item>
        <item name="android:textColor">@color/manatee</item>
    </style>

    <style name="et_sign_in">
        <item name="android:layout_width">@dimen/fragment_sign_in_et_width</item>
        <item name="android:layout_height">@dimen/fragment_sign_in_et_height</item>
        <item name="android:layout_marginTop">@dimen/fragment_sign_in_et_margin_top</item>
        <item name="android:background">@drawable/edit_background_radius_8</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/fragment_sign_in_view_text_size</item>
        <item name="android:textColor">@color/bunting</item>
    </style>

    <style name="btn">
        <item name="android:layout_width">@dimen/fragment_travel_easy_view_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_radius_10</item>
        <item name="android:elevation">@dimen/fragment_travel_easy_btn_registration_elevation</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/fragment_travel_easy_btn_text_size</item>
    </style>

    <style name="tv_before_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/fragment_travel_easy_btn_sign_in_margin_top
        </item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/manatee</item>
        <item name="android:textSize">@dimen/fragment_travel_easy_btn_text_size</item>
    </style>
</resources>